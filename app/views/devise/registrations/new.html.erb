<div class="form_wrapper">
  <h2 class="new_user_title">Chatを始めよう</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名", class: "form-controll" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email", class: "form-controll" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード", class: "form-controll" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認", class: "form-controll" %>
    </div>

    <div class="form-group actions">
      <%= f.submit "新規登録" , class: "btn btn-info new_user_btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
