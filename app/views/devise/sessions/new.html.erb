
<div class="form_wrapper">
  <h2 class="login_title">Chatにログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.email_field :email, class: "form-controll", autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, class: "form-controll", autocomplete: "current-password", placeholder: "パスワード" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, :"ログインしたままにする" %>
      </div>
    <% end -%>

    <div class="form-group actions">
      <%= f.submit "ログイン" ,class:"btn btn-info login_btn" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
